@inject NavigationManager NavigationManager;

@if (this.Product is not null)
{
    <tr>
        <td>@Product.Name</td>
        <td>@Product.Quantity</td>
        <td>@Product.Price.ToString("c")</td>
        <td>
            <a class="btn btn-light"
               href="/editProduct/@Product.Id">
                Edit
            </a>
        </td>
        <td>

        </td>
    </tr>
}

@code {
    [Parameter]
    public Product? Product { get; set; }
}
